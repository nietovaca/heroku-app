<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('partials/header.ejs')%>
  </head>
  <body>
    <form class="form-group" action="/teacherspet/<%=student.id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Student Name:</label>
        <input type="text" class="form-control" name="name" value="<%=student.name%>">
      </div>
      <div class="form-group">
        <label for="notes">Notes: </label>
        <input type="textarea" class="form-control" name="notes" rows="3" value='<%=student.notes%>'></input>
      </div>
      <div class="form-group">
        <label for="project" class="form-control">Project:</label>
        <input type="text" class="form-control" name="project" value='<%=student.project%>'>
      </div>
      <div class="form-group">
        <label class="form-control">Participation:</label>
        <input type="textarea" class="form-control" name="participation" value="<%=student.participation%>">
      </div>
      <input type="submit" value="Submit Changes">
    </form>
    <button type="button" name="button">
      <a href="/teacherspet">Class List</a>
    </button>
  </body>
</html>
